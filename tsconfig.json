{
  "compilerOptions": {
    "module": "es2015",
    "target": "ES2017",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "noUnusedLocals": true,
    "outDir": "es",
    "baseUrl": ".",
    "lib": ["es2015", "esnext.asynciterable"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib", "es", "__tests__/**/*", "**/*.spec.ts"]
}
